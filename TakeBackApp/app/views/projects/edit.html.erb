
<h1> update your project</h1>

<div class="row">
  <div class="span6 offset3 center">
    <%= form_for(@project) do |f| %>
      

      <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
      </p>

      <p>
      <%= f.label :location %><br>
      <%= f.text_field :location %>
      </p>

      <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
      </p>

     
      <p>
      <%= f.submit "save changes", class: "btn btn-large btn-primary" %>
      </p>

    <% end %>
    </div>
</div>
